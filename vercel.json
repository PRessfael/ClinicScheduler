{
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public", "buildCommand": "npm run build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}
